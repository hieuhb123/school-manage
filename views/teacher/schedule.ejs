<%- include('../partials/header') %>

<div class="container text-center mb-5">
    <h1>Thời khóa biểu</h1>
    <hr>
    <div class="table-responsive small">
        <table class="table table-striped-columns table-sm mb-0">
            <thead>
                <tr class="table-info">
                    <th scope="col">Thứ</th>
                    <th scope="col">Thời gian</th>
                    <th scope="col">Phòng học</th>
                    <th scope="col">Mã Lớp</th>
                    <th scope="col">Mã HP</th>
                    <th scope="col">Tên Lớp</th>
                </tr>
            </thead>
            <tbody>
            <%for(let i = 0 ; i < schedule.length ; i++) {%>
            <tr>
                <td><%=schedule[i].dow%></td>
                <td><%=schedule[i].start_time + '-' + schedule[i].finish_time%></td>
                <td><%=schedule[i].room%></td>
                <td><%=schedule[i].clazz_id%></td>
                <td><%=schedule[i].subject_id%></td>
                <td><%=schedule[i].subject_name%></td>
            </tr>
            <%}%>
            </tbody>
        </table>
    </div>
</div>
<%- include('../partials/footer') %>